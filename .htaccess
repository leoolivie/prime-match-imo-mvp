<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Protege arquivos sensíveis quando a raiz do domínio aponta para esta pasta
    RewriteRule ^\.env - [F,L]
    RewriteRule ^storage/.* - [F,L]
    RewriteRule ^vendor/.* - [F,L]

    # Mantém acessíveis arquivos/diretórios reais (ex.: .well-known)
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Redireciona todas as demais requisições para a pasta /public
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L,NC]
</IfModule>
